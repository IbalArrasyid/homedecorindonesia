# WooCommerce Store Configuration
NEXT_PUBLIC_WC_STORE_URL=https://your-store.com

# WooCommerce API Keys - Read Only (for browsing products)
WC_READ_KEY=ck_your_read_key_here
WC_READ_SECRET=cs_your_read_secret_here

# WooCommerce API Keys - Write Only (for creating orders)
WC_WRITE_KEY=ck_your_write_key_here
WC_WRITE_SECRET=cs_your_write_secret_here

# WooCommerce API Keys - Full Access (for all operations)
WC_FULL_KEY=ck_your_full_key_here
WC_FULL_SECRET=cs_your_full_secret_here

# DOKU Payment Gateway Configuration
DOKU_CLIENT_ID=your_doku_client_id_here
DOKU_SECRET_KEY=your_doku_secret_key_here
DOKU_API_URL=https://api-sandbox.doku.com
DOKU_URL=https://api-sandbox.doku.com # Alternative name

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
# For production: NEXT_PUBLIC_SITE_URL=https://yourdomain.com